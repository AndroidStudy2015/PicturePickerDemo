<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.apple.picturepickerdemo.activity.PicturePickerActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black_bg">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/back"/>

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_back"
            android:background="@color/black_xi_xian"/>

        <TextView
            android:id="@+id/title"

            android:layout_width="wrap_content"


            android:layout_height="match_parent"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/iv_back"
            android:gravity="center"
            android:text="我的相册"
            android:textColor="#fff"
            android:textSize="17sp"/>

        <Button
            android:id="@+id/bt_finish"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:enabled="false"
            android:background="@drawable/bt_bg"
            android:text="完  成"
            android:textColor="#fff"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pic_picker_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black_bg">

        <RelativeLayout
            android:id="@+id/rl_select_dir"

            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_select_dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:text="所有图片"
                android:textColor="#fff"
                android:textSize="17sp"/>

            <ImageView
                android:id="@+id/sjx"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignBottom="@+id/tv_select_dir"
                android:layout_marginLeft="-3dp"
                android:layout_toRightOf="@+id/tv_select_dir"
                android:background="@drawable/sjx_bai"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_yu_lan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:text="预览"
            android:textColor="@color/unenable_text_color"
            android:textSize="17sp"/>
    </RelativeLayout>

</LinearLayout>
